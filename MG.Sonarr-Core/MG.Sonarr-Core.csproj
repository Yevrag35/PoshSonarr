<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>MG.Sonarr</RootNamespace>
    <LangVersion>7.3</LangVersion>
    <Description>A library consisting of PowerShell cmdlets for querying/managing Sonarr PVR.</Description>
    <Copyright>Copyright © 2019 Yevrag35, LLC.</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Yevrag35/PoshSonarr/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Yevrag35/PoshSonarr</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Yevrag35/PoshSonarr</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Authors>Mike Garvey</Authors>
    <Company>Yevrag35, LLC.</Company>
    <Version>1.1.0</Version>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <AssemblyVersion>1.1.0.0</AssemblyVersion>
    <FileVersion>1.1.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

	<ItemGroup>
		<Compile Include="..\MG.Sonarr-DotNet\**\*.cs" Exclude="..\MG.Sonarr-DotNet\obj\**\*.cs;..\MG.Sonarr-DotNet\bin\**\*.cs;..\MG.Sonarr-DotNet\Properties\AssemblyInfo.cs;..\MG.Sonarr-DotNet\Cmdlets\Connection\ConnectInstance.cs" />
	</ItemGroup>

  <ItemGroup>
    <None Remove="DebugScript.ps1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="DebugScript.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="6.2.2" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assemblies\" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MG.Dynamic-Core, Version=3.2.2.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>D:\Local_Repos\PoshSonarr\MG.Sonarr-Core\Assemblies\MG.Dynamic-Core.dll</HintPath>
      <Private>true</Private>
      <SpecificVersion>true</SpecificVersion>
    </Reference>
  </ItemGroup>

</Project>
